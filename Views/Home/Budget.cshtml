@model BudgetVM;
@{
    ViewData["Title"] = "Budgets";
}
<h1>@User.Identity.Name's budgets</h1>
@foreach (var item in Model.budgets)
{
    <p>
        @item.Name |
        <a asp-controller="Home" asp-action="EditBudget" asp-route-id="@item.Id">Edit</a> |
        <a asp-controller="Home" asp-action="DeleteBudget" asp-route-id="@item.Id">Delete</a>
    </p>
}
<a asp-controller="Home" asp-action="CreateBudget">Create new budget</a>

