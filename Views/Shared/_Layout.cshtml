<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Home">Home</a></li>
                <li>
                    <form asp-controller="Login" asp-action="Logout">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>
        
        
    }
    else
    {
        <nav>
            <ul>
                <li><a asp-controller="Login" asp-action="Register">Register</a></li>
                <li><a asp-controller="Login" asp-action="Login">Login</a></li>
            </ul>
        </nav>
    }
    <div>
        @RenderBody()
    </div>
    @RenderSection("EndOfBody", false)
</body>
</html>
