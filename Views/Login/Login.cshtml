@model LoginVM
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
@section Title{
    @ViewBag.Title
}
<div class="my-5 container menu-color">
    <form asp-controller="Login" asp-action="Login" class="row">

        <label asp-for="Username" class="my-3 col-3 fw-bold"></label>
        <input asp-for="Username" class="my-3 col-8" />

        <label asp-for="Password" class="my-3 col-3 fw-bold"></label>
        <input asp-for="Password" class="my-3 col-8" />

        <input type="submit" value="Log In" class="my-3 offset-4 col-4 " />
    </form>
    <div class="row text-center">
        <a asp-controller="Login" asp-action="Register" class="discrete-link">Register</a>
    </div>
    <div class="row text-center text-danger">
        <span asp-validation-for="Username" class="mt-5"></span>
        <span asp-validation-for="Password" class="mt-3"></span>
    </div>
</div>