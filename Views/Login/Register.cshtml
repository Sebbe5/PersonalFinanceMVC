@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="flex-center">
    <div class="text-center form-signin w-100 m-auto bg-white rounded">
        <form asp-action="Register">
            <h1 class="h3 mb-3 ">Register</h1>
            <div class="form-floating my-1">
                <input asp-for="Username" class="form-control" />
                <label asp-for="Username"></label>
            </div>
            <div class="form-floating my-1">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-1">
                <input asp-for="Password" class="form-control" type="password" />
                <label asp-for="Password"></label>
            </div>
            <div class="form-floating my-1">
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="message">
        <p>
            Dear Visitor,

            Welcome to this website! We want to inform you that this website is a personal project,
            and as such, you are not required to provide a real email address when using its features.
            We understand the importance of privacy and respect your choice to use a pseudonymous or temporary email address if you prefer.

            <br /><br />
            Rest assured that we do not collect any personal information without your consent,
            and we prioritize the security and confidentiality of any data you choose to share with us.

            <br /><br />
            Best regards,
            Sebastian Fredriksson
        </p>
    </div>

</div>

