@model RegisterVM
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}
<div class="my-5 container">
    <form asp-controller="Login" asp-action="Register" class="row">

        <label asp-for="Username" class="my-3 col-3 fw-bold"></label>
        <input asp-for="Username" class="my-3 col-8" />

        <label asp-for="Password" class="my-3 col-3 fw-bold"></label>
        <input asp-for="Password" class="my-3 col-8" />

        <label asp-for="PasswordRepeat" class="my-3 col-3 fw-bold"></label>
        <input asp-for="PasswordRepeat" class="my-3 col-8" />

        <input type="submit" value="Register" class="my-3 offset-4 col-4 " />
    </form>
    <div class="row text-center">
        <a asp-controller="Login" asp-action="Login" class="discrete-link">Log In</a>
    </div>
    <div class="row text-center text-danger">
        <span asp-validation-for="Username" class="mt-5"></span>
        <span asp-validation-for="Password" class="mt-3"></span>
        <span asp-validation-for="PasswordRepeat" class="mt-3"></span>
    </div>
</div>


