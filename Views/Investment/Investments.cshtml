@model InvestmentsVM

@{
    ViewData["Title"] = "Investments";
    Layout = "_FunctionPage";
}

<div class="container mt-4 bg-white rounded">
    <h1>Investments</h1>
    @if (Model.Investments.Count > 0)
    {
        <a asp-action="CreateBudget" class="btn btn-primary mb-3">Create new investment</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="w-50">Name</th>
                    <th class="w-25">Value</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var investment in Model.Investments)
                {
                    <tr>
                        <td class="align-middle">@investment.Name</td>
                        <td class="align-middle">@investment.Value.ToString("C")</td>
                        <td><a asp-action="BudgetDetails" asp-route-id="@investment.Id" class="btn btn-info">Details</a></td>
                        <td>
                            <a asp-action="EditBudget" asp-route-id="@investment.Id" class="btn btn-warning">Edit</a>
                        </td>
                        <td>
                            <form asp-action="RemoveBudget" asp-route-id="@investment.Id" onsubmit="return confirm('Are you sure you want to delete this budget?');">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="card my-4">
            <div class="card-body">
                <h2 class="card-title">Create your first investment</h2>
                <p class="card-text">Welcome to our investment tool! It looks like you haven't created any investments yet. Don't worry, it's easy to get started!</p>
                <p class="card-text">
                    Creating an investment is the first step to achieving your financial goals. With our tool, you can track the progress of your investments.
                </p>
                <div class="card-footer mt-2">
                    <a asp-action="CreateBudget" class="btn btn-primary w-100">Create new investment</a>
                </div>
            </div>
        </div>
    }
</div>

